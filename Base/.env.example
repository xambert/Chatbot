# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Angular Frontend Configuration
ANGULAR_PORT=4200

# Backend Configuration (Python Flask)
BACKEND_PORT=3001
BACKEND_URL=http://localhost:3001

# Database Configuration
# Change this URL to switch between different databases

# SQLite (Default - no setup required)
DATABASE_URL=sqlite:///./chatbot.db

# PostgreSQL (uncomment to use)
# DATABASE_URL=postgresql://username:password@localhost:5432/chatbot

# MySQL (uncomment to use)  
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/chatbot

# Database settings
DB_ECHO=false

# AI Configuration
ENABLE_ADVANCED_AI=true
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.7

# WebSocket LLM Configuration
# Replace with your actual LLM WebSocket service details
LLM_WEBSOCKET_URL=ws://localhost:8080/chat
LLM_API_KEY=                                        # Optional: Leave empty if no authentication needed
LLM_MODEL_NAME=your-custom-model-name
LLM_TIMEOUT=30
LLM_MAX_RETRIES=3

# Chat History Configuration
ENABLE_HISTORY=true
MAX_HISTORY_ITEMS=100
HISTORY_RETENTION_DAYS=30
LLM_TEMPERATURE=0.7

# Chat Settings
ENABLE_HISTORY=true
MAX_HISTORY_ITEMS=100
HISTORY_RETENTION_DAYS=30

# Server Settings
FLASK_ENV=development
FLASK_DEBUG=true

# Enable Advanced AI for all clients
ENABLE_ADVANCED_AI=true

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_DELAY=5000
WS_MAX_RECONNECT_ATTEMPTS=5

# Chat History Configuration
ENABLE_HISTORY=true
MAX_HISTORY_ITEMS=100
HISTORY_RETENTION_DAYS=30
