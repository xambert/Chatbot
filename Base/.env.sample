# Example .env file for Customer Chatbot Backend

# Flask App Settings
FLASK_ENV=production
SECRET_KEY=your-secret-key

# Database Settings
# For SQLite (default)
DATABASE_URL=sqlite:///chatbot.db
# For PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/chatbot_db
# For MySQL
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/chatbot_db

# CORS Settings
# Comma-separated list of allowed origins (e.g., your website domain)
CORS_ORIGINS=https://your-website.com

# Server Port
PORT=3001

# Other Settings
# Only allow SELECT queries in SQL mode
SQL_MODE=select_only

# Claude Sonnet 4 (AI model) toggle
CLAUDE_SONNET_4_ENABLED=true

# Add any other environment variables as needed
